/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.section{
width: 100%;
height: 100%;
padding-top: 2rem;
align-content: center;
}
.section__title{
  width: 90%;
  height: 2rem;
  align-self: center;
  text-align: center;
}
.flex-item{
  margin: 0.5rem;
  width:  90%;
  height: 3rem;
  align-content: center;
}
.flex-item-input{
  width: 100%;
  border-bottom-width: 0.1rem;

}
.flex-item-button{
  width: 100%;
  align-self: center;
}
.button-hover {
  background-color: red;
}
